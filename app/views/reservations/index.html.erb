<h1>予約一覧</h1>

<table>
  <thead>
    <tr>
      <th>施設画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>合計料金</th>
      <th>チェックイン日</th>
      <th>チェックアウト日</th>
      <th>予約確定日時</th>
    </tr>
  </thead>
  
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= image_tag reservation.room.image if reservation.room.image.attached? %></td>
        <td><%= reservation.room.name %></td>
        <td><%= reservation.room.description %></td>
        <td><%= reservation.total_price %></td>
        <td><%= reservation.check_in_date %></td>
        <td><%= reservation.check_out_date %></td>
        <td><%= reservation.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
    <% end %>
  </tbody>  
</table>





