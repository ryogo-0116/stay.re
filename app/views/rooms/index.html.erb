<h1>宿泊施設一覧</h1>
<table>
  <thead>
    <tr>
      <th>施設画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>宿泊料金</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <% if room.image.attached? %>
          <td><%= image_tag room.image %></td> 
        <% else %>
          <td>No image</td>
        <% end %>
        <td><%= link_to room.name, room %></td>
        <td><%= room.description %></td>
        <td><%= room.price %>円/日</td>
        <td><%= room.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規登録', new_room_path %>

